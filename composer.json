    "require": {
        "yiisoft/composer-config-plugin": "*@dev",
        "hiqdev/hidev-license": "*",
        "hiqdev/hidev-phpstan": "*",
        "hiqdev/hidev-phpunit": "*",
        "hiqdev/hidev-chkipper": "*",
        "hiqdev/hidev-composer": "*",
        "hiqdev/hidev-php-cs-fixer": "*"
    },
    "require-dev": {
        "hiqdev/hidev": "dev-master",
        "hiqdev/hidev-hiqdev": "dev-master",
        "hiqdev/hidev-readme": "dev-master",
        "hiqdev/hidev-license": "dev-master",
        "hiqdev/hidev-phpstan": "dev-master",
        "hiqdev/hidev-phpunit": "dev-master",
        "hiqdev/hidev-chkipper": "dev-master",
        "hiqdev/hidev-composer": "dev-master",
        "hiqdev/hidev-php-cs-fixer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "hidev\\php\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "1.0": "1.0.x-dev"
        },
        "config-plugin": {
            "hidev": "config/hidev.php"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
